@model IEnumerable<ASM_NET104_WedQuanAn.Models.ThucDon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_content.cshtml";
}


<h1>Thực Đơn</h1>

<p>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModalStudent">
        Create
    </button>
    <hr />
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenTd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NhomNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["All"] as IEnumerable<ThucDon>)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NhomNavigation.TenNhom)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaTd">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaTd">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaTd">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />

<h1>Nhóm</h1>
<p>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        Create
    </button>
</p>
<div id="list">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Mã nhóm
                </th>
                <th>
                    Tên Nhóm
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>

<!-- Modal Nhóm -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Nhóm</h4>
            </div>
            <div class="modal-body">
                <form id="formStudent">
                    <div class="form-group">
                        <label for="MaNhom">Mã Nhóm</label>
                        <input type="text" class="form-control" id="idNhom" placeholder="ID" value="ID" readonly>
                    </div>
                    <div class="form-group">
                            <label for="Name">Tên Nhóm</label>
                            <input type="text" class="form-control" id="NameNhom" placeholder="Name" required>
                        </div>


                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="return _add();" id="btnAdd">Add</button>
                <button type="button" class="btn btn-primary" onclick="return _edit();" id="btnUpdate" style="display:none">Update</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
